{
  "name": "elegant-bro/arrayee",
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Pavel Stepanets",
      "email": "pahhan.ne@gmail.com"
    },
    {
      "name": "Dmitry Anikeev",
      "email": "anikeev.dmitry@outlook.com"
    },
    {
      "name": "Artem Dekhtyar",
      "email": "m@artemd.ru"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "elegant-bro/interfaces": "^1.0"
  },
  "require-dev": {
    "ext-simplexml": "*",
    "phpunit/phpunit": "^5.7 || ^6.4 || ^7.0",
    "symplify/easy-coding-standard": "^6.0",
    "symfony/cache": "4.3.8",
    "symfony/http-foundation": "4.3.8",
    "symfony/mime": "4.3.8"
  },
  "autoload": {
    "psr-4": {
      "ElegantBro\\Arrayee\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElegantBro\\Arrayee\\Tests\\": "tests"
    }
  },
  "config": {
    "platform": {
      "php": "7.1.27"
    },
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "docker-build": "docker build --build-arg VERSION=7.4 --tag elegant-bro/arrayee:7.4 ./docker/",
    "docker-install": "docker run --rm -v $PWD:/app elegant-bro/arrayee:7.4 composer install",
    "style": "docker run --rm -v $PWD:/app -w /app elegant-bro/arrayee:7.4 vendor/bin/ecs --level psr12 check src",
    "unit": "docker run --rm -v $PWD:/app -w /app elegant-bro/arrayee:7.4 -dzend_extension=xdebug.so -dxdebug.mode=coverage  vendor/bin/phpunit",
    "coverage": "docker run --rm -v $PWD:/app -w /app elegant-bro/arrayee:7.4 php check-coverage.php coverage.xml 100",
    "check-all": "composer unit && composer coverage && composer style"
  }
}
